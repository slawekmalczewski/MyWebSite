<% title "Add New Post Category |" %>

<div id="page-content-wrapper">
  <div class="container-fluid">

    <h1>Add New Post Category</h1>
    <hr class="separationLine3">
    <div class="row">
      <div class="col col-md-3">
        <%= link_to("Back", :back, :class => "btn btn-lg btn-warning btn-block", :style=>"margin:10px 0; padding:0.5rem 3rem;" ) %>
      </div>
    </div>

    <%= form_for(:post_category, :url => {:action => 'create'}) do |field| %>
    <%= render(:partial => "form", :locals => {:field => field}) %>

    <div class="row">
      <div class="col-md-9">

      </div>
      <div class="col-md-3">
        <%= submit_tag("Create", :class => "btn btn-lg btn-success btn-block pull-right", :style=>"margin:10px 0; padding:0.5rem 3rem;" ) %>
      </div>
    </div>

    <% end %>

  </div>
</div>

</div>
<!-- Close Administration nav -->
</div>
