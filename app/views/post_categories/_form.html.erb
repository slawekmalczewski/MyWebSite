<div class = "card-body">
  <div class="form-group row">
    <label for="postcategoryname" class="col-sm-2 col-form-label">Category Name: </label>
    <div class="col-sm-10">
      <%= field.text_field(:postcategoryname, :class => "form-control", :placeholder => "Category name goes here...") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="PostCategory_Description" class="col-sm-2 col-form-label">Category Description: </label>
    <div class="col-sm-10">
      <%= field.text_area(:PostCategory_Description, :class => "form-control", :rows =>5, :placeholder => "Category description goes here...") %>
    </div>
  </div>


  <div class="form-group row">
    <label for="colour" class="col-sm-2 col-form-label">Pill colour: </label>
    <div class="col-sm-10">
      <%= field.text_field(:colour, :class => "form-control", :rows =>5, :placeholder => "HEX Colour goes here...") %>
    </div>
  </div>
