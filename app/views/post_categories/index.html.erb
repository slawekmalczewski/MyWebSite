<% title "Post Categories" %>
  <div class ="container-fluid">
    <br/>
    <h1 class="display-2">Posts Categories <sup><span class = "badge badge-success"><%= @post_category.size %></span></sup></h1>
    <br/>
    <%= link_to("Back", {:controller => "administrators", :action => 'index'}, :class => "btn btn-warning btn-lg") %>
    <%= link_to("Add new Post Category", {:action => 'new'}, :class => "btn btn-primary btn-lg") %>


    <table class="table table-striped table-bordered mt-3">
      <thead>
        <tr>
          <th class="span4 align-middle text-center h5">Category Name</th>
          <th class="span4 align-middle text-center h5">Category Description</th>
          <th class="span4 align-middle text-center h5">Created at</th>
          <th class="span4 align-middle text-center h5">Posts @ Category</th>
          <th class="span4 align-middle text-center h5">Actions</th>
        </tr>
      </thead>
      <tbody>
    <% @post_category.each do |cat| %>
      <tr>
        <td class="span4 align-middle text-center"><%= cat.postcategoryname %></td>
        <td class="span4 align-middle text-center"><%= cat.PostCategory_Description %></td>
        <td class="span4 align-middle text-center"><%= cat.created_at %></td>
        <td class="span4 align-middle text-center"><%= number_of_post_with_category(cat.id) %></td>
        <td class="span4 align-middle text-center btn-group-vertical d-block">
          <%= link_to("Show", {:action => 'show', :id => cat.id}, :class => "btn btn-success btn-small m-1") %>
          <%= link_to("Edit", {:action => "edit", :id => cat.id}, :class => "btn btn-warning btn-small m-1") %>
          <%= link_to("Delete", {:action => "delete", :id => cat.id}, :class => "btn btn-danger btn-small m-1") %>
        </td>
      </tr>

    <% end %>
      </tbody>
    </table>

  </div>

<!-- Close Administration nav -->
</div>
