<div class="container pt-5">

<%= link_to("Back", {:controller => 'my_photos', :action => 'index', :id => @myPhotography.photo_gallery_id}, :class => "btn btn-warning btn-lg") %>

  <div class="card bg-dark text-white mx-auto w-75">
    <div class="card-header">
      <h1 class="display-5 text-center"><%= @myPhotography.myPhotoTitle %></h1>
    </div>
    <div class="card-img-top bg-white p-3 text-center">
      <%= image_tag(@myPhotography.myPhotograph, :class => "rounded", :width => "100%") %>
    </div>
    <div class="card-body bg-white text-dark font-weight-bold">
      <div class="row d-flex justify-content-center">
        <div class="col-4 text-center">
          <h3>Published : <%= @myPhotography.myPhotoVisibility %></h3>
        </div>
        <div class="col-4 text-center">
          <h3>Location: <i class="fa fa-map-marker"> <%= @myPhotography.myPhotoLocation %></i></h3>
        </div>
        <div class="col-4 text-center">
          <h3>Photo position: <%= @myPhotography.myPhotoPosition %></h3>
        </div>
      </div>
      <div class="row d-flex justify-content-around mt-2">
        <div class="col-4 text-center">
          <h3>ISO : <%= @myPhotography.myPhotoISO%></h3>
        </div>
        <div class="col-4 text-center">
          <h3>Aperture: <%= @myPhotography.myPhotoAperture %></h3>
        </div>
        <div class="col-4 text-center">
          <h3>Shutter Speed: <%= @myPhotography.myPhotoShutterSpeed %></h3>
        </div>
      </div>
    </div>
    <div class="card-footer bg-dark">
      <%= link_to("Delete", {:action => 'delete'}, :class => "btn btn-lg btn-danger pull-right ml-2") %>
      <%= link_to("Edit", {:action => 'edit', :id => @myPhotography.id}, :class => "btn btn-lg btn-warning pull-right ml-2") %>
    </div>
  </div>
</div>
