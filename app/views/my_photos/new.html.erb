<div class="container">
  <div class="card mt-5 cardShadow">
    <div class="card-header bg-light">
      <h1>Add Photo</h1>
    </div>

    <div class = "card-body">

      <%= form_for(:my_photo, :url => {:action => 'create'}) do |field| %>

      <div class="form-group row">
        <label for="uploads" class="col-sm-2 col-form-label">Image: </label>
        <div class="col-sm-10">
            <%= field.file_field(:myPhotograph, multiple: false) %>
        </div>
      </div>

      <div class="form-group row">
        <label for="photo_gallery_id" class="col-sm-2 col-form-label">Photo Gallery: </label>
        <div class="col-sm-10">
          <%= field.select(:photo_gallery_id, @myPhotoCategory.map{|t| [t.gallerytitle, t.id]}, :selected => @chosen_gallery.id) %>
        </div>
      </div>

      <div class="form-group row">
        <label for="myPhotoTitle" class="col-sm-2 col-form-label">Photo Title: </label>
        <div class="col-sm-10">
          <%= field.text_field(:myPhotoTitle, :class => "form-control", :placeholder => "Photo title goes here...") %>
        </div>
      </div>

      <div class="form-group row">
        <label for="myPhotoLocation" class="col-sm-2 col-form-label">Photo Location: </label>
        <div class="col-sm-10">
          <%= field.text_field(:myPhotoLocation, :class => "form-control", :placeholder => "Where did ZZZZ you take that photo ?") %>
        </div>
      </div>

      <div class="form-group">
        <label for ="myPhotoDescription">Photo Description: </label>
        <%= field.text_area(:myPhotoDescription, id: :myPhotoDescription, :class => "form-control", :rows =>5, :placeholder => "Photo description goes here...") %>
        <trix-editor input = "myPhotoDescription"></trix-editor>
      </div>

      <div class="form-group row">
        <label for="myPhotoISO" class="col-sm-1 col-form-label">ISO: </label>
        <div class="col-sm-3">
        <%= field.select(:myPhotoISO,  ['ISO','N/A','100','125','160','200','250','320','400','500','640','800','1000','1250','1600','2000'], {}, :class => "form-control") %>
        </div>
        <label for="myPhotoAperture" class="col-sm-1 col-form-label">Apeture: </label>
        <div class="col-sm-3">
          <%= field.select(:myPhotoAperture,  ['Apeture','N/A','f/1.8','f/2.0','f/2.2','f/2.5','f/2.8','f/3.2','f/3.5','f/4','f/4.5','f/5','f/5.6','f/6.3','f/7.1','f/8','f/9','f/10','f/11','f/13','f/14','f/16','f/22','f/32'], {}, :class => "form-control") %>
        </div>
        <label for="myPhotoShutterSpeed" class="col-sm-1 col-form-label">Shutter Speed: </label>
        <div class="col-sm-3">
          <%= field.select(:myPhotoShutterSpeed,  ['Shutter Speed','N/A','1/1600','1/1250','1/1000','1/800','1/640','1/500','1/400','1/320','1/250','1/200','1/160','1/125','1/100','1/80','1/60','1/50','1/40','1/30','1/25','1/20','1/15','1/13','1/10','1/8','1/6','1/5','1/4','1/3','1/2.5','1/2','1/1.6','1/1.3','1','1.3','1.6','2','2.5','3','4','5','6','8','1/10','1/13','1/15','1/20','1/25','1/30','bulb'], {}, :class => "form-control") %>
        </div>
      </div>

      <div class="form-group row">
        <label for="form-check-label" class="col-sm-2 col-form-label">Photo Position: </label>
        <div class="col-sm-10">
          <%= field.select(:myPhotoPosition, 1..@counter, :class => "form-control") %>
        </div>
      </div>

      <div class="form-group row">
        <label for="form-check-label" class="col-sm-2 col-form-label">Published ? </label>
        <div class="col-sm-10">
          <%= field.check_box(:myPhotoVisibility, :class => "form-check-input", :style => "width:20px; height:20px;") %>
        </div>
      </div>

      <div class="form-group d-flex row bg-dark mx-auto mt-5 p-3 w-100 justify-content-end">
        <%= link_to("Back", :back, :class => "btn btn-lg btn-info pull-right ml-2") %>
        <%= submit_tag("Create", :class => "btn btn-lg btn-success pull-right ml-2") %>
      </div>

    </div>

<% end %>

  </div>
</div>
