<% title "Deleting Photo" %>

<div id="page-content-wrapper">
  <div class="container-fluid">

    <div class="row">
      <div class="col col-md-1">
      </div>
      <div class="col col-md-10">
        <div class ="alert alert-light mx-auto mt-5" role="alert">
          <h1 class="alert-heading text-white bg-danger p-3 text-center">You are going to delete photo: <%= @myPhotography.myPhotograph.filename %></h1>
          <br/>
          <%= image_tag(@myPhotography.myPhotograph, :class => "img-thumbnail img-responsive w-70 center-block") %>
          <br/>
          <hr class="separationLine1">
          <br/>
        </div>
      </div>
      <div class="col col-md-1">
      </div>
    </div>

      <div class="row">
        <div class="col col-md-3">

        </div>
        <div class="col col-md-3 btn-block mt-auto">
          <%= link_to("Back", :back, :class => "btn btn-lg btn-warning btn-block") %>
        </div>
        <div class="col col-md-3 btn-block mt-auto">
          <%= button_to("Delete", {:action => 'confirm_deletion', :id => @myPhotography.id}, method: :post, :class => "btn btn-lg btn-danger btn-block") %>
        </div>
        <div class="col col-md-3">

        </div>
      </div>
  </div>
</div>

</div>

<!-- Close Administration nav -->
</div>
