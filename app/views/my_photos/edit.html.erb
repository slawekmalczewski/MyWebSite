<div class="container">
  <div class="card mt-5 cardShadow">
    <div class="card-header bg-light">
      <h1>Edit Photo Data</h1>
    </div>

    <div class = "card-body">

      <%= form_for(:my_photo, :url => {:action => 'update', :id => @myPhotography.id}) do |field| %>

      <div class="form-group row">
        <label for="uploads" class="col-sm-2 col-form-label">Image: </label>
        <div class="col-sm-4">
          <%= @myPhotography.myPhotograph.filename %>
        </div>
      </div>

      <div class="form-group row">
        <label for="photo_gallery_id" class="col-sm-2 col-form-label">Photo Gallery: </label>
        <div class="col-sm-10">
          <%= field.select(:photo_gallery_id, @myPhotoCategory.map{|t| [t.gallerytitle, t.id]}, :selected => @myPhotography.photo_gallery_id) %>
        </div>
      </div>

      <div class="form-group row">
        <label for="myPhotoTitle" class="col-sm-2 col-form-label">Photo Title: </label>
        <div class="col-sm-10">
          <%= field.text_field(:myPhotoTitle, :class => "form-control", value:@myPhotography.myPhotoTitle) %>
        </div>
      </div>

      <div class="form-group row">
        <label for="myPhotoLocation" class="col-sm-2 col-form-label">Photo Location: </label>
        <div class="col-sm-10">
          <%= field.text_field(:myPhotoLocation, :class => "form-control", value:@myPhotography.myPhotoLocation) %>
        </div>
      </div>

      <div class="form-group">
        <label for ="myPhotoDescription">Photo Description: </label>
        <%= field.text_area(:myPhotoDescription, id: :myPhotoDescription, :class => "form-control", :rows =>5, value:@myPhotography.myPhotoDescription) %>
        <trix-editor input = "myPhotoDescription"></trix-editor>
      </div>

      <div class="form-group row">
        <label for="form-check-label" class="col-sm-2 col-form-label">Photo Position: </label>
        <div class="col-sm-10">
          <%= field.select(:myPhotoPosition, 1..@counter, :class => "form-control", :selected =>  @myPhotography.myPhotoPosition ) %>
        </div>
      </div>

      <div class="form-group row">
        <label for="form-check-label" class="col-sm-2 col-form-label">Published ? </label>
        <div class="col-sm-10">
          <%= field.check_box(:myPhotoVisibility, :class => "form-check-input", :style => "width:20px; height:20px;", :checked => @myPhotography.myPhotoVisibility) %>
        </div>
      </div>

      <div class="form-group row">
        <label for="form-check-label" class="col-sm-2 col-form-label">Show on Map ? </label>
        <div class="col-sm-10">
          <%= field.check_box(:show_on_map, :class => "form-check-input", :checked => @myPhotography.show_on_map, :style => "width:20px; height:20px;") %>
        </div>
      </div>

      <div class="form-group d-flex row bg-dark mx-auto mt-5 p-3 w-100 justify-content-end" data-turbolinks="false">
        <%= link_to("Back", {:controller => 'my_photos', :action => 'index', :id => @myPhotography.photo_gallery_id}, :class => "btn btn-lg btn-info pull-right ml-2") %>
        <%= link_to("Edit Metadata", {:controller => 'my_photos', :action => 'edit_metadata', :id => params[:id] }, :class => "btn btn-lg btn-warning pull-right ml-2") %>
        <%= submit_tag("Update", :class => "btn btn-lg btn-success pull-right ml-2") %>
      </div>

    </div>

<% end %>

  </div>
</div>
