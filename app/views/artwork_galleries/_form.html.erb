<div class="form-group row">
  <label for="artworkGalleryTitle" class="col-sm-2 col-form-label">Artwork Gallery Title: </label>
  <div class="col-sm-10">
      <%= field.text_field(:artworkGalleryTitle, :class => "form-control", value:@artworkgallery.artworkGalleryTitle) %>
  </div>
</div>

<div class="form-group">
  <label for ="artworkGalleryDescription">Artwork Gallery Description: </label>
  <%= field.text_area(:artworkGalleryDescription, :class => "form-control", :rows =>5,  value:@artworkgallery.artworkGalleryDescription) %>
</div>

<div class="form-group row">
  <label for="form-check-label" class="col-sm-2 col-form-label">Gallery Position: </label>
  <div class="col-sm-10">
    <%= field.select(:artworkGalleryPosition, 1..@counter, :selected => @artworkgallery.artworkGalleryPosition) %>
  </div>
</div>

<div class="form-group row">
  <label for="artworkGalleryMainImage" class="col-sm-2 col-form-label">Artwork Gallery Main Photo: </label>
  <div class="col-sm-10">
        <%= field.file_field(:artworkGalleryMainImage) %>
  </div>
</div>

<div class="form-group row">
  <label for="form-check-label" class="col-sm-2 col-form-label">Published ? </label>
  <div class="col-sm-10">
    <%= field.check_box(:artworkGalleryVisibility, :class => "form-check-input", :style => "width:20px; height:20px;", :checked => @artworkgallery.artworkGalleryVisibility) %>
  </div>
</div>
