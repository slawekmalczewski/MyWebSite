  <div class="form-group row">
    <label for="gallerytitle" class="col-sm-2 col-form-label">Gallery Name: </label>
    <div class="col-sm-10">
        <%= field.text_field(:gallerytitle, :class => "form-control", value:@gallery.gallerytitle, :placeholder => "Enter here Gallery Title") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="galleryAuthor" class="col-sm-2 col-form-label">Gallery Author: </label>
    <div class="col-sm-10">
        <%= field.text_field(:galleryAuthor, :class => "form-control", value:@gallery.galleryAuthor, :placeholder => "Enter here the name of the Author") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="country" class="col-sm-2 col-form-label">Country: </label>
    <div class="col-sm-10">
        <%= field.text_field(:country, :class => "form-control", value:@gallery.country, :placeholder => "Enter here the name of the Country") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="city" class="col-sm-2 col-form-label">City: </label>
    <div class="col-sm-10">
        <%= field.text_field(:city, :class => "form-control", value:@gallery.city, :placeholder => "This will be used to retrieve weather data") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="galleryImageHeader" class="col-sm-2 col-form-label">Gallery Main Photo: </label>
    <div class="col-sm-10">
          <%= field.file_field(:galleryImageHeader) %>
    </div>
  </div>

  <div class="form-group">
    <label for ="galleryDescription">Gallery Description: </label>
    <%= field.text_area(:galleryDescription, :class => "form-control", :rows =>5,  value:@gallery.galleryDescription, :placeholder => "Enter here Gallery Description") %>
  </div>

  <div class="form-group">
    <label for ="galleryQuoteText">Gallery Quote: </label>
    <%= field.text_area(:galleryQuoteText, :class => "form-control", :rows =>3,  value:@gallery.galleryQuoteText, :placeholder => "Enter here a Quote main text") %>
  </div>

  <div class="form-group row">
    <label for ="galleryQuoteAuthor" class="col-sm-2 col-form-label">Quote Author: </label>
    <div class="col-sm-10">
    <%= field.text_field(:galleryQuoteAuthor, :class => "form-control", value:@gallery.galleryQuoteAuthor, :placeholder => "Enter here Quote Author") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="form-check-label" class="col-sm-2 col-form-label">Gallery Position: </label>
    <div class="col-sm-10">
      <%= field.select(:galleryPosition, 1..@counter, :selected => @gallery.galleryPosition) %>
    </div>
  </div>

  <div class="form-group row">
    <label for="form-check-label" class="col-sm-2 col-form-label">Published ? </label>
    <div class="col-sm-10">
      <%= field.check_box(:galleryVisibility, :class => "form-check-input", :style => "width:20px; height:20px;", :checked => @gallery.galleryVisibility) %>
    </div>
  </div>
