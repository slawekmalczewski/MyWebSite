<% title "My Galleries |" %>

<div id="page-content-wrapper">
  <div class="conatiner-fluid">
    <div class="row pt-5 pb-5 justify-content-center">
      <% @gallery.each do |g| %>
        <div class="col-sm-10 col-md-5 col-lg-5 col-xl-3 mb-3 ml-2 mr-2" style="max-width:450px;">
            <div class="card">
              <div class="datecircle">
                <div class="day"><%= g.created_at.day %></div>
                <div class="month"><%= g.created_at.strftime('%b') %></div>
              </div>
              <div class="img-card">
                <%= image_tag(g.galleryImageHeader.variant(combine_options: {resize: '350x150^', gravity: 'center', extent: '350x150'}).processed, :class=>"img-responsive") %>
                <div class="category text-center">
                  <%= g.country %>
                </div>
              </div>

              <br/>
              <div class="card-content">
                <h4 class="card-title">
                  <%= g.gallerytitle%>
                </h4>
                <div class="">
                  <%= first_sentence(g.galleryDescription) %>
                </div>
              </div>
              <div class="card-read-more" data-turbolinks="false">
                <div class="post-meta">
                  <i class="glyphicon glyphicon-picture"></i> <%= g.myPhotos.count %> photographs
                  <br/>
                  <i class="fa fa-pencil"></i> <%= g.galleryAuthor %>
                  <br/>
                  <i class="fa fa-calendar"></i> <%= local_time(g.created_at, '%d %B %Y, %A @ %H:%M') %>
                </div>
                <%= link_to 'View <i class="glyphicon glyphicon-chevron-right"></i><i class="glyphicon glyphicon-chevron-right"></i>'.html_safe, {:controller => 'photo_galleries', :action => 'show', :id => g.id}, :class => "btn btn-success btn-md pull-right p-3 m-3" %>
              </div>
            </div>
        </div>
      <% end %>
    </div>

    <!-- Here is pagination using will_paginate gem -->
    <div class="row">
      <div class="col-sm-12 col-md-12 d-flex justify-content-center">
        <%= will_paginate @gallery, renderer: BootstrapPagination::Rails, :class => "font-weight-bold" %>
      </div>
    </div>

    <div class="row" style="height:75vh;">
      <!-- SPACER -->
    </div>

  </div>
</div>
