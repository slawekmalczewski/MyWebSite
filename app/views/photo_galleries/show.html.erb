<% title "Gallery | "+@gallery.gallerytitle %>

<div id="page-content-wrapper">
  <div class="container-fluid">

    <div class="container pt-2">
      <div class="row justify-content-center align-items-center">
        <div class="col text-center">
          <h1 class="display-1"><%= @gallery.gallerytitle %></h1>
        </div>
      </div>
        <hr class="separationLine1">
      <div class="row justify-content-center mt-4 mb-2">
        <div class="col text-center">
          <p class="lead"><%= @gallery.galleryDescription %></p>
        </div>
      </div>
      <hr class="separationLine1 mb-5">


    <% sort_gallery_by_photo_position(@gallery.myPhotos.published).each_slice(3) do |row| %>
      <div class ="row justify-content-center">
        <% row.each do |photo| %>
        <div class="col-md-3 p-2 m-3">
          <div class="overlay-container d-flex justify-content-center m-auto" data-overlay-text="<%= photo.myPhotoTitle %>">
            <%= link_to image_tag(photo.myPhotograph.variant(combine_options: {resize: '300^x300', gravity: 'center', extent: '300x300'}).processed, :class => "img-responsive overlay-img"), photo.myPhotograph, data: {lightbox: 'roadtrip', title: photo.myPhotoTitle+photo.myPhotoDescription}%>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>

    </div>
  </div>
</div>


<script>
    lightbox.option({
      'resizeDuration': 200,
      'wrapAround': true,
      'fitImagesInViewport': true
    })
</script>
