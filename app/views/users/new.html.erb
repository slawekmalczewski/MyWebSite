<% title "Add new User"%>

<div id="page-content-wrapper">
  <div class="container-fluid">

    <h1>Add New User:</h1>

    <div class="row">
      <div class="col col-md-3">
        <%= link_to("Back", :back, :class => "btn btn-lg btn-warning btn-block", :style=>"margin:10px 0; padding:0.5rem 3rem;" ) %>
      </div>
    </div>

    <%= form_for(:user, :url => {:action => 'create'}) do |field| %>
    <%= render(:partial => "addNewUserForm", :locals => {:field => field}) %>
    <%= submit_tag("Create", :class => "btn btn-lg btn-success pull-right") %>

    <% end %>

  </div>
</div>

</div>
<!-- Close Administration nav -->
</div>
