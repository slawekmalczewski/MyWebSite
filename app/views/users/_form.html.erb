<div class = "card-body">
  <div class="form-group row">
    <label for="User_FirstName" class="col-sm-2 col-form-label">User First Name: </label>
    <div class="col-sm-10">
      <%= field.text_field(:User_FirstName, :class => "form-control", :placeholder => "Name goes here...") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="User_Surname" class="col-sm-2 col-form-label">User Surname: </label>
    <div class="col-sm-10">
      <%= field.text_field(:User_Surname, :class => "form-control", :placeholder => "Surname goes here...") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="Username" class="col-sm-2 col-form-label">Username: </label>
    <div class="col-sm-10">
      <%= field.text_field(:Username, :class => "form-control", :placeholder => "Login goes here...") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="Email" class="col-sm-2 col-form-label">Email: </label>
    <div class="col-sm-10">
      <%= field.text_field(:Email, :class => "form-control", :placeholder => "Email goes here...") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="password" class="col-sm-2 col-form-label">Password: </label>
    <div class="col-sm-10">
      <%= field.text_field(:password, :class => "form-control", :placeholder => "Password goes here...") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="password_confirmation" class="col-sm-2 col-form-label">Password Confirmation: </label>
    <div class="col-sm-10">
      <%= field.text_field(:password_confirmation, :class => "form-control", :placeholder => "Confirm your password here...") %>
    </div>
  </div>
