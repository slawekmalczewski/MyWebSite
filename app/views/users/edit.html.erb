<% title "Edit User details"%>

<div id="page-content-wrapper">
  <div class="container-fluid">

    <h1>Edit User Details: <%= @user.first_name %> <%= @user.last_name %></h1>
    <hr class="separationLine3">

    <div class="row">
      <div class="col col-md-3">
        <%= link_to("Back", {:controller => 'users', :action => 'index'}, :class => "btn btn-lg btn-warning btn-block", :style=>"margin:10px 0; padding:0.5rem 3rem;" ) %>
      </div>
    </div>

    <%= form_for(:user, :url => {:action => 'update', :id => @user.id}) do |field| %>
    <%= render(:partial => "form", :locals => {:field => field}) %>
    <%= submit_tag("Update", :class => "btn btn-lg btn-success pull-right") %>

    <% end %>

  </div>
</div>

</div>
<!-- Close Administration nav -->
</div>
