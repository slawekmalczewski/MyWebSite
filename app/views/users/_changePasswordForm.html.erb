  <div class="form-group row">
    <label for="password" class="col-sm-2 col-form-label">Password: </label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class="col-sm-10">
      <%= field.password_field :password, autocomplete: "new-password", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="password_confirmation" class="col-sm-2 col-form-label">Confirm Password: </label><br />
    <div class="col-sm-10">
      <%= field.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
    </div>
  </div>
