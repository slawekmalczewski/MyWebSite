<% title "Welcome |" %>

<!--
This styling is for full screen slider, to remove any scrollbars from the browser window, it is  placed here because this styles should only be
applied to thie particular site
-->

<style>
  html,
  body,
  .carousel,
  .carousel-inner,
  .carousel-inner .item {
    height: 100%;
    overflow-y: hidden;
  }
</style>


    <div id="carouselHacked" class="carousel slide carousel-fade" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox" data-turbolinks="false">
            <div class="item active">
              <div class="carousel-caption">
                <div class="carousel-caption-elements">
                  <div>
                    <h3 class="slideimagetitle">About this project</h3>
                  </div>
                  <div>
                    <h5 class="slideimagedesc">A little bit of information about this project...</h5>
                  </div>
                  <div>
                    <!-- Button trigger modal -->
                    <%= link_to 'Read more...', {:controller => 'posts', :action => 'show', :id => find_about_post}, :class => "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="item">
              <div class="carousel-caption">
                <div class="carousel-caption-elements">
                  <div>
                    <h3 class="slideimagetitle"><%= @latestpost.last.Post_Title %> <sup><span class="badge badge-pill badge-danger">New</span><sup></h3>
                  </div>
                  <div>
                    <h5 class="slideimagedesc"><%= first_sentence(@latestpost.last.Post_Body) %></h5>
                  </div>
                  <div>
                    <%= link_to 'Read more...', {:controller => 'posts', :action => 'show', :id => @latestpost.last}, :class => "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="item">
              <div class="item-centered">
                <%= image_tag(MyPhoto.get_latest_photo_uploaded_and_published.myPhotograph, class: "carousel-image") %>
              </div>

              <div class="carousel-caption">
                <div class="carousel-caption-elements">
                  <div>
                    <h3 class="slideimagetitle"><%= MyPhoto.get_latest_photo_uploaded_and_published.myPhotoTitle %> <sup><span class="badge badge-pill badge-danger">New Photo</span></sup></h3>
                  </div>
                  <div>
                    <h5 class="slideimagedesc"><%= MyPhoto.get_latest_photo_uploaded_and_published.photo_gallery.gallerytitle %></h5>
                  </div>
                  <div>
                    <%= link_to 'View', {:controller => 'photo_galleries', :action => 'show', :id => MyPhoto.get_latest_photo_uploaded_and_published.photo_gallery_id}, :class => "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="item">
              <div class="item-centered">
              <%= image_tag(@latestgallery.last.galleryImageHeader, class: "carousel-image") %>
              </div>
              <div class="carousel-caption">
                <div class="carousel-caption-elements">
                  <div>
                    <h3 style="slideimagetitle"><%= @latestgallery.last.gallerytitle %> <sup><span class="badge badge-pill badge-danger">New Gallery</span></sup></h3>
                  </div>
                  <div>
                    <h5 class="slideimagedesc">
                      <%= first_sentence(@latestgallery.last.galleryDescription) %>
                    </h5>
                  </div>
                  <div>
                    <%= link_to 'View', {:controller => 'photo_galleries', :action => 'show', :id => @latestgallery.last}, :class => "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carouselHacked" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carouselHacked" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
