<% title "Sign Up" %>
<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="card log_in_card">
      <div class="card-block">
        <div class="row">
          <div class="col col-md-12">
            <h2 class="display-4">Sign Up</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, autofocus: true, class: "w-100" %>
              </div>

              <div class="form-group">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, autofocus: true, class: "w-100" %>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up" %>
              </div>

              <div class="border-top my-4">
              </div>

            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
